@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="bg-custom p-0 my-3">
        <a href="#" class="d-block text-left text-black text-decoration-none">
            <h2>Последние добавленные аниме</h2>
        </a>
    </div>
    <div class="row">
        @foreach (var anime in ViewBag.LatestAnime)
        {
            <div class="col-md-2 mb-4">
                <div class="card">
                    <img src="@anime.ImgPath" class="card-img-top" alt="@anime.Title">
                    <div class="card-body">
                        <h5 class="card-title">@anime.Title</h5>
                        <p class="card-text">Дата выпуска: @anime.ReleaseDate.ToShortDateString()</p>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="row">
        <div class="col-md-3">
            <!-- Блок слева -->
            <div class="bg-custom p-2 my-2">
                <h2>Мой список</h2>
                <ul class="list-group">
                    <li class="list-group-item"><a href="#" class="text-decoration-none">Аниме</a></li>
                    <li class="list-group-item"><a href="#" class="text-decoration-none">Рецензии</a></li>
                    <li class="list-group-item"><a href="#" class="text-decoration-none">Форумы</a></li>
                    <li class="list-group-item"><a href="#" class="text-decoration-none">История</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div>

    </div>