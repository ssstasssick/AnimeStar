@model EditUserViewModel

<h2 class="text-white">Редактирование пользователя</h2>

<div class="fullInfAboutAnime text-white">
    <form asp-action="EditUser" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="CurrentUserName"></label>
            <input asp-for="CurrentUserName" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="NewUserName"></label>
            <input asp-for="NewUserName" class="form-control" />
            <span asp-validation-for="NewUserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="OldPassword"></label> <!-- New field for current password -->
            <input asp-for="OldPassword" type="password" class="form-control" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NewPassword"></label>
            <input asp-for="NewPassword" type="password" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NewRole">New Role</label>
            <select asp-for="NewRole" class="form-control">
                @foreach (var role in ViewBag.Roles)
                {
                    <option value="@role.Name">@role.Name</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Users" class="btn btn-secondary">Cancel</a>
    </form>
</div>
